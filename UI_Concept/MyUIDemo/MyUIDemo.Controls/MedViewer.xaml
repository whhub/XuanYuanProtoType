<UserControl x:Class="MyUIDemo.Controls.MedViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="450" Background="#ffeeeeee">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Image Source="Images\DicomImage1.bmp" Margin="5" Stretch="Uniform"></Image>
        <Image Source="Images\DicomImage2.bmp" Margin="5" Grid.Column="1" Stretch="Uniform"></Image>
        <Image Source="Images\DicomImage3.bmp" Margin="5" Grid.Row="1" Stretch="Uniform"></Image>
        <Image Source="Images\DicomImage4.bmp" Margin="5" Grid.Column="1" Grid.Row="1" Stretch="Uniform"></Image>

        <TextBlock Grid.RowSpan="6" Grid.ColumnSpan="3" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5" Foreground="White">Viewer</TextBlock>

    </Grid>
</UserControl>
