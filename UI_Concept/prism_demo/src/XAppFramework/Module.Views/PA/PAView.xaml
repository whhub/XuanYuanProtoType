            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="72">PA</TextBlock>
        <Button Grid.Row="1" Command="{Binding GotoPRCommand}">患者注册</Button>
    </Grid>
</UserControl>
